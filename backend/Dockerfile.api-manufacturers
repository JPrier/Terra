# Multi-stage build for API manufacturers service  
FROM rust:1.75 as builder

WORKDIR /app
COPY . .

# Build the manufacturers API
RUN cargo build --release --bin api_manufacturers

# Runtime image
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY --from=builder /app/target/release/api_manufacturers /app/api_manufacturers

EXPOSE 3002

CMD ["/app/api_manufacturers"]