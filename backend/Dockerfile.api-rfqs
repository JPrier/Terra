# Multi-stage build for API RFQs service
FROM rust:1.75 as builder

WORKDIR /app
COPY . .

# Build the RFQs API
RUN cargo build --release --bin api_rfqs

# Runtime image  
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY --from=builder /app/target/release/api_rfqs /app/api_rfqs

EXPOSE 3001

CMD ["/app/api_rfqs"]