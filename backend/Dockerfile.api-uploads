# Multi-stage build for API uploads service
FROM rust:1.75 as builder

WORKDIR /app
COPY . .

# Build the uploads API
RUN cargo build --release --bin api_uploads

# Runtime image
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY --from=builder /app/target/release/api_uploads /app/api_uploads

EXPOSE 3000

CMD ["/app/api_uploads"]